{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**", // tsup outputs
        "build/**" // remix outputs
      ]
    },
    "typecheck": {
      "dependsOn": ["@repo/database#build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "VITE_PUBLIC_CLOUD_FLARE_PAGES_MODE"
    ]
}
