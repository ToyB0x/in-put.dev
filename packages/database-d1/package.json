{
  "name": "@repo/database-d1",
  "private": true,
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "generate": "drizzle-kit generate",
    "status:local": "wrangler d1 migrations list db_test_api_react_1 --local --persist-to ../../cf-local-worker",
    "apply:local": "wrangler d1 migrations apply db_test_api_react_1 --local --persist-to ../../cf-local-worker",
    "potentialy-danger-command //destroy:local": "rm -rf ../../cf-local-worker/v3/d1",
    "status:preview": "wrangler d1 migrations list db_test_api_react_1 --preview --remote",
    "apply:preview": "wrangler d1 migrations apply db_test_api_react_1 --preview --remote",
    "status:prd": "wrangler d1 migrations list db_test_api_react_1 --remote",
    "apply:prd": "wrangler d1 migrations apply db_test_api_react_1 --remote",
    "backup:prd": "wrangler d1 export test1 --remote --output ./backup.sql",
    "lint": "eslint --max-warnings=0",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "0.33.0",
    "drizzle-zod": "0.5.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "drizzle-kit": "0.24.2",
    "typescript": "5.6.2",
    "wrangler": "3.78.3"
  },
  "volta": {
    "extends": "../../package.json"
  }
}