{
  "name": "@repo/database",
  "private": true,
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:seed:local": "npx tsx scripts/seed-local.ts",
    "db:studio:branch-local": "NEON_BRANCH=LOCAL drizzle-kit studio",
    "db:check:branch-local": "NEON_BRANCH=LOCAL echo 'check issue: https://github.com/drizzle-team/drizzle-orm/issues/2284' && drizzle-kit check",
    "db:check:branch-main":  "NEON_BRANCH=MAIN echo 'check issue: https://github.com/drizzle-team/drizzle-orm/issues/2284' && drizzle-kit check",
    "db:migrate:branch-local": "NEON_BRANCH=LOCAL drizzle-kit migrate",
    "db:migrate:branch-main":  "NEON_BRANCH=MAIN drizzle-kit migrate",
    "lint": "eslint --max-warnings=0",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "normalize": "npx tsx scripts/normalizeUrl.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "0.9.5",
    "drizzle-orm": "0.33.0",
    "drizzle-valibot": "0.2.0",
    "valibot": "0.42.1",
    "postgres": "3.4.4"
  },
  "devDependencies": {
    "dotenv": "16.4.5",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "drizzle-kit": "0.24.2",
    "typescript": "5.6.2",
    "vite": "5.4.7"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
